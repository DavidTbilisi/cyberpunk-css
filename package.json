{
  "name": "cssframework",
  "version": "1.0.0",
  "description": "",
  "main": "scripts/init.js",
  "scripts": {
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --runInBand",
    "build:css": "npx sass scss/cyberpunk.scss cyberpunk.css --style=expanded",
    "build:css:min": "npx sass scss/cyberpunk.scss cyberpunk.min.css --style=compressed",
    "lint:css": "stylelint \"**/*.scss\"",
    "test:e2e": "npx playwright test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "jest": {
    "testEnvironment": "jsdom",
    "testTimeout": 20000,
    "collectCoverageFrom": [
      "scripts/**/*.js",
      "!scripts/init.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "type": "commonjs",
  "directories": {
    "doc": "docs"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@testing-library/dom": "^10.4.1",
    "babel-jest": "^30.2.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.2.0",
    "playwright": "^1.56.1",
    "sass": "^1.94.0",
    "stylelint": "^16.25.0"
  }
}
